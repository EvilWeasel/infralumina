# --- Supabase (required) ---
# From Supabase Project Settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=YOUR_SUPABASE_PUBLISHABLE_KEY

# From Supabase Project Settings -> Database -> Connection string (URI)
# Use pooled or direct connection according to your deployment setup.
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# --- AI provider (optional for local AI tests) ---
# Leave unset in cloud when AI features are not used.
LOCAL_LLM_BASE_URL=http://127.0.0.1:1234/v1
LOCAL_LLM_MODEL=meta-llama-3.1-8b-instruct
LOCAL_LLM_API_KEY=local-dev
